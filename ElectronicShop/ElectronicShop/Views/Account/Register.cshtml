@model RegisterInputModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/unlayout.css" />
</head>

<body>

    <h2>Register</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div class="label">
            @Html.LabelFor(x => x.Login)
        </div>
        <div class="input">
            @Html.TextBoxFor(x => x.Login)
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="label">
            @Html.LabelFor(x => x.Name)
        </div>
        <div class="input">
            @Html.TextBoxFor(x => x.Name)
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div class="label">
            @Html.LabelFor(x => x.Password)
        </div>
        <div class="input">
            @Html.PasswordFor(x => x.Password)
            @Html.ValidationMessageFor(x => x.Password)
        </div>
        <div class="label">
            @Html.LabelFor(x => x.PasswordHash)
        </div>
        <div class="input">
            @Html.PasswordFor(x => x.PasswordHash)
            @Html.ValidationMessageFor(x => x.PasswordHash)
        </div>

        <input class="btn" type="submit" value="Register">
    }

</body>
